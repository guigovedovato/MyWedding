@model List<MyWeddingSystem.Models.ViewModel.GuestView>

<!-- Main -->
<section id="main" class="container">
    <section class="box special">
        <header class="major">
            <h2>
                @ViewBag.Type
                <br />
                Irá mostrar somente os que já confirmaram.
            </h2>
        </header>
    </section>

    <div class="box">
        @if(Model.Count > 0)
        { 
            if (string.IsNullOrEmpty(Model.FirstOrDefault().Message))
            {
                <table class="alt">
                    <thead>
                        <tr>
                            <th>UserID</th>
                            <th>Nome</th>
                            <th>Quantidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UserID</td>
                                <td>@item.UserName</td>
                                <td>@item.Quantity</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2"></td>
                            <td>@Model.Sum(x => x.Quantity)</td>
                        </tr>
                    </tfoot>
                </table>
            }
            else
            {
                @Model.FirstOrDefault().Message
            }
        }
    </div>
</section>


