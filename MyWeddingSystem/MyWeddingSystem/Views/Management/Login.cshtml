<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--[if lte IE 8]><script src="../Scripts/ie/html5shiv.js"></script><![endif]-->
    <link rel="stylesheet" href="../Content/css/main.css" />
    <!--[if lte IE 8]><link rel="stylesheet" href="../Content/css/ie8.css" /><![endif]-->
    <title>@ViewBag.Title</title>
</head>
<body style="overflow:hidden">
    <div class="login-banner">
        <br /><br /><br /><br /><br /><br />
        <!-- Main -->
        <section id="main" class="container 75%">
            <header>
                <h2>Login</h2>
                <p><img alt="MyWedding" src="~/Content/Images/logo.png" style="max-width:24px; position:relative; top:5px; " />@Html.ActionLink("MyWedding", "Index", "Home") - @System.Configuration.ConfigurationManager.AppSettings["WHO"].ToString()</p>
            </header>
            <div class="box">
                <form id="loginform" class="form-horizontal" role="form" action="@Url.Action("Login", "Management", "?ReturnUrl=%2f")" method="post" novalidate="novalidate">
                    <div class="row uniform 50%">
                        <div class="6u 12u(mobilep)">
                            <input type="text" name="Login" id="Login" value="" placeholder="Usuário" />
                        </div>
                        <div class="6u 12u(mobilep)">
                            <input type="password" name="Password" id="Password" value="" placeholder="Senha" />
                        </div>
                    </div>
                    <div class="row uniform">
                        <div class="12u">
                            <ul class="actions align-center">
                                <li><input type="submit" id="btEntrar" value="Entrar" /></li>
                            </ul>
                        </div>
                    </div>
                    <input type="hidden" name="Name" id="Name" value="login" />
                    <span style="color:#e89980; padding-bottom:-8em;">@TempData["ErrorMessage"]</span>
                </form>
            </div>
        </section>

        <!-- Footer -->
        <footer id="footer">
            <ul class="copyright">
                <li>&copy; @DateTime.Now.Year - Powered by <a href="mailto:@System.Configuration.ConfigurationManager.AppSettings["MAILTO"]">@System.Configuration.ConfigurationManager.AppSettings["DEVELOPER"]</a></li>
                <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
            </ul>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="../Scripts/jquery.min.js"></script>
    <script src="../Scripts/jquery.dropotron.min.js"></script>
    <script src="../Scripts/jquery.scrollgress.min.js"></script>
    <script src="../Scripts/skel.min.js"></script>
    <script src="../Scripts/util.js"></script>
    <!--[if lte IE 8]><script src="../Scripts/ie/respond.min.js"></script><![endif]-->
    <script src="../Scripts/main.js"></script>

</body>
</html>