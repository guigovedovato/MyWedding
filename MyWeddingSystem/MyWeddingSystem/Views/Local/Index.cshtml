@{
    var AuthUser = Session["AuthUser"] as MyWeddingSystem.Models.ViewModel.UserView;
}
<!-- Main -->
<section id="main" class="container">
    <section class="box special">
        <header class="major">
            <h2>
                Também está ansioso(a) <b>@AuthUser.Name</b>?
                <br />
                Veja a localização da nossa celebração.
            </h2>
        </header>
    </section>

    <div class="box">
        <div><b style="font-size:larger">Chácara Pé na Rocha</b><br />
            Engenho Velho - Estrada que liga Mogi Guaçu a Pinhal. Próximo à Igreja Santa Rita, <br />
            13840-000 Mogi-Guaçu, São Paulo, Brazil.
        </div>
        <a href="https://www.facebook.com/chacarapenarocha" class="icon fa-facebook"><span class="label">Facebook</span></a>
        <div id="map"></div>
        <style>
            #map {
                width: 100%;
                height: 500px;
            }
        </style>
        <script>
            function initMap() {
                var myLatLng = { lat: -22.303268, lng: -46.9064729 };

                var mapDiv = document.getElementById('map');
                var map = new google.maps.Map(mapDiv, {
                    center: myLatLng,
                    zoom: 16
                });
                var marker = new google.maps.Marker({
                    position: myLatLng,
                    map: map
                });
            }
        </script>
        <script src="https://maps.googleapis.com/maps/api/js?callback=initMap" async defer></script>
    </div>
</section>